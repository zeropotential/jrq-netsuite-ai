# Copy to .env and adjust for your environment

# Postgres
POSTGRES_DB=netsuite_ai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# App
APP_ENV=dev
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/netsuite_ai

# Secret encryption (base64 for 32-byte AES-256 key). Generate one before storing secrets.
APP_KEY_ID=v1
APP_KEK_B64=

# NetSuite JDBC
# Mount the JDBC driver JAR at the same path inside the container.
NETSUITE_JDBC_JAR=/opt/netsuite/NQjc.jar
NETSUITE_JDBC_DRIVER=com.netsuite.jdbc.OpenAccessDriver
NETSUITE_JDBC_ROW_LIMIT=50

# LLM
LLM_PROVIDER=openai
OPENAI_MODEL=gpt-4o-mini

# Caddy
PUBLIC_HOST=srv1315310.hstgr.cloud
CADDYFILE_PATH=/root/jrq-netsuite-ai/netsuite-ai-webapp/deploy/caddy/Caddyfile
